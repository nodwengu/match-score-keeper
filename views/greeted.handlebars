
<div class="message infoMessage center animated fadeIn" style="margin: 5% 0 0 0;">
  <h5> {{infoMsg}}</h5>
</div>

<div class="card" style="margin: 4.5rem 0 1rem 0;">
  <div class="card-content">
    <div class="row">
      <div>
        <h4 class="center" style="margin-top: 1%;">List of Names Greeted</h4>
        <table class="highlight" style="    border: solid 1px #DCDBDC;">
          <thead>
            <tr>
              <th style="font-size: 1.4em;">Name</th>
              <th style="font-size: 1.4em;">Actions</th>
            </tr>
          </thead>

          <tbody>
            {{#each names}}
            <tr>
              <td><a href="/counter/{{name}}">{{name}}</a></td>
              <td>
                {{!-- <a href="/greeted/edit/{{id}}" class="waves-effect waves-light btn"><i class="material-icons left">edit</i>Edit</a> --}}
                <a href="/greeted/delete/{{id}}" class="waves-effect #f44336 red btn"><i class="material-icons left">delete</i>Delete</a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


